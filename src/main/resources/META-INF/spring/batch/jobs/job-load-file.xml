			VALOR_05,
			VALOR_06,
			VALOR_07,
			VALOR_08,
			VALOR_09,
			VALOR_10,
			VALOR_11,
			VALOR_12,
			VALOR_13,
			VALOR_14,
			VALOR_15,
			VALOR_16,
			VALOR_17,
			VALOR_18,
			VALOR_19,
			VALOR_20,
			VALOR_21,
			VALOR_22,
			VALOR_23,
			VALOR_24,
			VALOR_25,
			VALOR_26,
			VALOR_27,
			VALOR_28,
			VALOR_29,
			VALOR_30,

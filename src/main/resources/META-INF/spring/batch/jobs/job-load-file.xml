			VALOR_44,
			VALOR_45,
			VALOR_46,
			VALOR_47,
			VALOR_48,
			VALOR_49,
			VALOR_50,
			CVE_STATUS,
			DS_ERROR
			)
			values (
			:rowNumber,
			:idProceso,
			:col1,
			:col2,
			:col3,
